<view class='container'>
  <view class='listWrapper'>
    <text class='title'>羽毛球</text>
    <text class='period'>{{periodStart}} - {{periodEnd}}</text> 
    <view>
      <view class="section">
        <!-- <view class="section__title">普通选择器</view> -->
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" class='picker-box'>
          <view class="picker">
            当前选择：{{array[index]}}
          </view>
         
        </picker>
         <view class='right-arrow ml-20'>
          </view> 
      </view>
      <view class="section-row">
        <!-- <view class="section__title">普通选择器</view> -->
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange" style='margin-right:40rpx'>
          <view class="picker">
            <text class='time-label'>开始时间:</text><text class='time-label'>{{time}}</text>
          </view>
        </picker>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
          <view class="picker">
            <text class='time-label'>结束时间:</text><text class='time-label'>{{time}}</text>
          </view>
        </picker>
      </view>
      <view class="section-address">
        <!-- <view class="section__title">普通选择器</view> -->

          <text class="label-1__text">活动地点:</text>
          <input placeholder="地点" />
      </view>

    </view>

  </view>
</view>